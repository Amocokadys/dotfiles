#!/bin/bash

usage()
{
	echo "usage: autoscript [-py] name"
	echo "       autoscript -h"
}
# variables: 
SCRIPT_FILE=""
SUBSCRIPT=aubash

while [ "$1" != "" ]; do
	case $1 in
		-h | --help ) 
			usage
			exit
			;;
		-py )
			SUBSCRIPT=aupy
			;;
		* )
			SCRIPT_FILE="$SCRIPT_FOLDER/$1"
	esac
	shift
done

$SUBSCRIPT $SCRIPT_FILE

